<Application x:Class="RAP_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RAP_Program_WPF"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ResearcherController x:Key="ResearcherController"/>

        <ObjectDataProvider x:Key="researcherList"
                            ObjectInstance="{StaticResource ResearcherController}"
                            MethodName="GetViewableList">
        </ObjectDataProvider>

        <local:PublicationController x:Key="PublicationController"/>

        <ObjectDataProvider x:Key="publicationList"
                            ObjectInstance="{StaticResource PublicationController}"
                            MethodName="GetPublications">
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="Levels"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:LEVEL"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Application.Resources>
</Application>
