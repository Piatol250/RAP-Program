<Application x:Class="RAP_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:entity="clr-namespace:RAP_WPF.Entity"
             xmlns:controller="clr-namespace:RAP_WPF.Controller"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <controller:ResearcherController x:Key="ResearcherController"/>

        <ObjectDataProvider x:Key="researcherList"
                            ObjectInstance="{StaticResource ResearcherController}"
                            MethodName="GetViewableList">
        </ObjectDataProvider>

        <controller:PublicationController x:Key="PublicationController"/>

        <ObjectDataProvider x:Key="publicationList"
                            ObjectInstance="{StaticResource PublicationController}"
                            MethodName="GetPublications">
        </ObjectDataProvider>

        <entity:Researcher x:Key="Researcher"/>

        <ObjectDataProvider x:Key="researcherLevelsList"
                            ObjectInstance="{StaticResource Researcher}"
                            MethodName="GetAllLevels">
        </ObjectDataProvider>
    </Application.Resources>
</Application>
